<xlue>
	<control class="Thunder.ImageButton">
	    <attr_def>
		   <attr name="NormalBkg" type="string" />
		   <attr name="HoverBkg" type="string" />
		   <attr name="DownBkg" type="string" />
		   <attr name="TipText" type="string"/>
		</attr_def>
		<method_def>
		   <AddTipText file="ImageButton.xml.lua" func="AddTipText" />
       <GetTipText file="ImageButton.xml.lua" func="GetTipText" />
		</method_def>
		<event_def> 
			<OnClick />
		</event_def>
		<objtemplate>
			<children>
				<obj id="button.bkg" class="ImageObject">
					<attr>
						<width>father.width</width>
						<height>father.height</height>
						<valign>center</valign>
						<halign>center</halign>
					</attr>
				</obj>
			</children>
			<eventlist>
				<event name="OnLButtonDown" file="ImageButton.xml.lua" func="OnLButtonDown" />
				<event name="OnLButtonUp" file="ImageButton.xml.lua" func="OnLButtonUp" />
				<event name="OnMouseEnter" file="ImageButton.xml.lua" func="OnMouseEnter" />
				<event name="OnMouseLeave" file="ImageButton.xml.lua" func="OnMouseLeave" />
				<event name="OnInitControl" file="ImageButton.xml.lua" func="OnInitControl" />
				<event name="OnPosChange" file="ImageButton.xml.lua" func="OnPosChange" />
				<event name="OnMouseHover" file="ImageButton.xml.lua" func="OnMouseHover" />
			</eventlist>
		</objtemplate>
	</control>
</xlue>
